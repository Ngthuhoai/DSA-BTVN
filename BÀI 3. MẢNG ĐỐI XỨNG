#include<bits/stdc++.h>
#define ll long long
using namespace std;
int kt(int a[],int n){
	int l=0,r=n-1;
	while(l<=r){
		if(a[l]!=a[r]) return 0;
		l++;r--;
	}
	return 1;
}
int main(){
	int t;cin>>t;
	while(t--){
	      int n;cin>>n;
	      int a[n];
	      for(int i=0;i<n;i++){
	      	cin>>a[i];
		  }
		  if(kt(a,n)) cout<<"YES\n";
		  else cout<<"NO\n";
	}
		  
 }
